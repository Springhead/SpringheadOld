################################################################
#
# 	Makefile for FileIO test
#
################################################################

################################################################
#	A rule to make sub directories.
################################################################

TOP_DIR 		= ../../..

FILEIO_TEST_DIR	= FILoader FILoadGRScene FILoadMesh

all:
	@for dir in $(FILEIO_TEST_DIR); \
	do echo "---------------------------------------------"; \
	   echo "             make $$dir    			      "; \
	   echo "---------------------------------------------"; \
	$(MAKE) -C $$dir all || exit; \
	done


################################################################
#	Default rules
################################################################

clean:
	@for dir in $(FILEIO_TEST_DIR); \
	do $(MAKE) -C $$dir  clean || exit; \
	done
	
realclean:
	@for dir in $(FILEIO_TEST_DIR); \
	do $(MAKE) -C $$dir  realclean || exit; \
	done 


################################################################
# 	THE END
################################################################
